<button onclick="create('email')">–°—Ç–≤–æ—Ä–∏—Ç–∏ Email</button>
<button onclick="create('sms')">–°—Ç–≤–æ—Ä–∏—Ç–∏ SMS</button>
<button onclick="create('push')">–°—Ç–≤–æ—Ä–∏—Ç–∏ Push</button>
<button onclick="clearLog()">–û—á–∏—Å—Ç–∏—Ç–∏</button>

<div class="log" id="log">–Ü–Ω—Ç–µ—Ä–∞–∫—Ç–∏–≤–Ω–∏–π –ª–æ–≥:</div>

<script>
  // –ü—Ä–æ–¥—É–∫—Ç–∏
  class EmailMessage {
    constructor(text) {
      this.text = text;
    }
    send() {
      return "üìß Email: " + this.text;
    }
  }

  class SMSMessage {
    constructor(text) {
      this.text = text;
    }
    send() {
      return "üì± SMS: " + this.text;
    }
  }

  class PushMessage {
    constructor(text) {
      this.text = text;
    }
    send() {
      return "üîî Push: " + this.text;
    }
  }

  // –§–∞–±—Ä–∏—á–Ω–∏–π –º–µ—Ç–æ–¥
  class MessageFactory {
    static createMessage(type, text) {
      switch (type) {
        case "email":
          return new EmailMessage(text);
        case "sms":
          return new SMSMessage(text);
        case "push":
          return new PushMessage(text);
        default:
          throw new Error("–ù–µ–≤—ñ–¥–æ–º–∏–π —Ç–∏–ø –ø–æ–≤—ñ–¥–æ–º–ª–µ–Ω–Ω—è");
      }
    }
  }

  // –í–∏–∫–æ—Ä–∏—Å—Ç–∞–Ω–Ω—è —Ñ–∞–±—Ä–∏–∫–∏
  function create(type) {
    const message = MessageFactory.createMessage(
      type,
      "–í—ñ—Ç–∞—î–º–æ! –¶–µ –ø—Ä–∏–∫–ª–∞–¥ —Ñ–∞–±—Ä–∏—á–Ω–æ–≥–æ –º–µ—Ç–æ–¥—É."
    );
    document.getElementById("log").innerText += "\n" + message.send();
  }

  function clearLog() {
    document.getElementById("log").innerText = "–Ü–Ω—Ç–µ—Ä–∞–∫—Ç–∏–≤–Ω–∏–π –ª–æ–≥:";
  }
</script>

