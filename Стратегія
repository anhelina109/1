<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Прототип: Стратегія</title>
    <style>
        body { font-family: Arial, sans-serif; text-align: center; margin: 20px; background-color: #f0f0f0; }
        button { padding: 5px 10px; margin: 5px; font-size: 14px; cursor: pointer; }
        #output { margin-top: 20px; padding: 10px; border: 1px solid #333; background-color: #fff; display: inline-block; min-width: 300px; text-align: center; }
        h1 { color: #2c3e50; }
    </style>
</head>
<body>
    <h1>Прототип: Стратегія (Strategy)</h1>
    <p>Виберіть стратегію сортування списку:</p>

    <button id="ascBtn">Сортувати за зростанням</button>
    <button id="descBtn">Сортувати за спаданням</button>

    <div id="output">
        <h3>Список:</h3>
        <div id="listDisplay"></div>
    </div>

    <script>
        // Стратегії сортування
        class SortStrategy {
            sort(data) { return data; }
        }

        class AscendingSort extends SortStrategy {
            sort(data) { return [...data].sort((a, b) => a - b); }
        }

        class DescendingSort extends SortStrategy {
            sort(data) { return [...data].sort((a, b) => b - a); }
        }

        // Контекст
        class Context {
            constructor(strategy) {
                this.strategy = strategy;
            }
            setStrategy(strategy) {
                this.strategy = strategy;
            }
            executeStrategy(data) {
                return this.strategy.sort(data);
            }
        }

        const numbers = [42, 7, 19, 85, 33];
        const listDisplay = document.getElementById('listDisplay');
        const context = new Context(new AscendingSort());

        function updateDisplay() {
            listDisplay.textContent = context.executeStrategy(numbers).join(", ");
        }

        document.getElementById('ascBtn').addEventListener('click', () => {
            context.setStrategy(new AscendingSort());
            updateDisplay();
        });

        document.getElementById('descBtn').addEventListener('click', () => {
            context.setStrategy(new DescendingSort());
            updateDisplay();
        });

        updateDisplay();
    </script>
</body>
</html>
