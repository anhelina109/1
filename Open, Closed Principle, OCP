<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Принцип відкритості/закритості (OCP)</title>
    <style>
        body { font-family: Arial, sans-serif; text-align: center; margin: 20px; background-color: #f0f0f0; }
        button { padding: 8px 15px; margin: 10px; font-size: 14px; cursor: pointer; }
        #output { margin-top: 20px; padding: 15px; border: 1px solid #333; background-color: #fff; display: inline-block; min-width: 300px; text-align: left; }
        h1 { color: #2c3e50; }
    </style>
</head>
<body>
    <h1>Принцип відкритості/закритості (OCP)</h1>
    <p>Виберіть операцію калькулятора:</p>

    <button id="addBtn">Додавання</button>
    <button id="multiplyBtn">Множення</button>

    <div id="output">
        <h3>Результат:</h3>
        <div id="result"></div>
    </div>

    <script>
        // Абстрактна стратегія
        class Operation {
            execute(a, b) { throw "Method not implemented"; }
        }

        // Конкретні операції
        class AddOperation extends Operation {
            execute(a, b) { return a + b; }
        }

        class MultiplyOperation extends Operation {
            execute(a, b) { return a * b; }
        }

        // Контекст калькулятора
        class Calculator {
            constructor(operation) { this.operation = operation; }
            setOperation(operation) { this.operation = operation; }
            calculate(a, b) { return this.operation.execute(a, b); }
        }

        const result = document.getElementById('result');
        const calculator = new Calculator(new AddOperation());

        document.getElementById('addBtn').addEventListener('click', () => {
            calculator.setOperation(new AddOperation());
            result.textContent = `5 + 3 = ${calculator.calculate(5, 3)}`;
        });

        document.getElementById('multiplyBtn').addEventListener('click', () => {
            calculator.setOperation(new MultiplyOperation());
            result.textContent = `5 * 3 = ${calculator.calculate(5, 3)}`;
        });
    </script>
</body>
</html>
